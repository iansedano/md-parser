{
  "rules": [
    {
      "name": "spoiler",
      "element_type": "default",
      "tokens": [
        {
          "type": "start_tag",
          "pattern": "\\[SPOILER\\]"
        },
        {
          "type": "end_tag",
          "pattern": "\\[/SPOILER\\]"
        }
      ],
      "actions": [
        {
          "type": "process_children",
          "convert_to": "html"
        },
        {
          "type": "add_prefix",
          "payload": "<details>\n<summary>Spoiler</summary>"
        },
        {
          "type": "add_suffix",
          "payload": "</details>"
        }
      ]
    },
    {
      "name": "note",
      "element_type": "default",
      "tokens": [
        {
          "type": "start_tag",
          "pattern": "\\[NOTE\\]"
        },
        {
          "type": "end_tag",
          "pattern": "\\[\\/NOTE\\]"
        }
      ],
      "actions": [
        {
          "type": "process_children",
          "convert_to": "html"
        },
        {
          "type": "add_prefix",
          "payload": "<div class=\"alert alert-info\" role=\"alert\">"
        },
        {
          "type": "add_suffix",
          "payload": "</div>"
        }
      ]
    },
    {
      "name": "alert",
      "element_type": "default",
      "tokens": [
        {
          "type": "start_tag",
          "pattern": "\\[ALERT\\]"
        },
        {
          "type": "end_tag",
          "pattern": "\\[\\/ALERT\\]"
        }
      ],
      "actions": [
        {
          "type": "process_children",
          "convert_to": "html"
        },
        {
          "type": "add_prefix",
          "payload": "<div class=\"alert alert-warning\" role=\"alert\">"
        },
        {
          "type": "add_suffix",
          "payload": "</div>"
        }
      ]
    },
    {
      "name": "category_tag",
      "element_type": "standalone_prefix",
      "tokens": [
        {
          "type": "prefix",
          "pattern": "(@#)(\\w+)"
        }
      ],
      "actions": [
        {
          "type": "process_children",
          "convert_to": "html"
        },
        {
          "type": "add_prefix",
          "payload": "<span class=\"badge badge-pill badge-primary\" style=\"font-size:1.2em; background-color:#fbb03b; color:black\">"
        },
        {
          "type": "add_suffix",
          "payload": "</span>"
        }
      ]
    }
  ]
}
